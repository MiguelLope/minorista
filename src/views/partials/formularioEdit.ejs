<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editProductModalLabel">Editar Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editProductForm" action="productos/edit" method="post">
          <input type="hidden" id="editProductId" name="editProductId">
          <div class="mb-2">
            <label for="editProductName" class="form-label">Nombre del Producto</label>
            <input type="text" class="form-control form-control-sm" id="editProductName" name="editProductName" required>
          </div>
          <div class="mb-2">
            <label for="editProductDescription" class="form-label">Descripci√≥n</label>
            <textarea class="form-control form-control-sm" id="editProductDescription" rows="2" name="editProductDescription" required></textarea>
          </div>
          <div class="mb-2">
            <label for="editProductCost" class="form-label">Costo Unitario</label>
            <input type="number" class="form-control form-control-sm" id="editProductCost" name="editProductCost" min="0" required>
          </div>
          <div class="mb-2">
            <label for="editProductPrice" class="form-label">Precio de Venta</label>
            <input type="number" class="form-control form-control-sm" id="editProductPrice" name="editProductPrice" min="0" required>
          </div>
          <div class="mb-2">
            <label for="editProductStock" class="form-label">Stock</label>
            <input type="number" class="form-control form-control-sm" id="editProductStock" name="editProductStock" min="0" required>
          </div>
          <button type="submit" class="btn btn-primary btn-sm w-100" id="editProductBtn">Guardar Cambios</button>
        </form>
      </div>
    </div>
  </div>
</div>